URxvt.transparent: true
URxvt.shading:25

! Adding font size control
URxvt.font:  xft:consolas:pixelsize=12

! Included this so you know how to make your foreground not match the color of your background
URxvt.foreground: #eeeeee

! Tab style
URxvt.saveLines: 300000
URxvt.scrollBar: false
URxvt*scrollstyle: plain
URxvt*scrollWidthBuffer: true
URxvt*scrollTtyKeypress: true
URxvt*cursorBlink: true
URxvt*cursorUnderline: true
URxvt*secondaryScroll: true
!Done use this with i3 as it malfunctions
!URxvt*borderLess: true

